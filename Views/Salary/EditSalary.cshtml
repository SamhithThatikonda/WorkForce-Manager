@{}

@model Application.Models.Entities.Salary.SalaryClass

@* @{
    ViewBag.Title = "Edit Employee";
} *@

@if (Model == null)
{
    <p> Salary record not found </p>
}

@if (Model != null)
{<h1> Edit Salary </h1>

<form method = "post">

    <div class = "mt-3">
        <label class = "form-label">Salary Id</label>
        <input type = "text" class = "formal-control" asp-for="Sal_Id" readonly>
    </div>
    
    <div class = "mt-3">
        <label class = "form-label">Employee Id</label>
        <input type = "text" class = "formal-control" asp-for="Emp_Id" readonly>
    </div>

    <div class = "mt-3">
        <label class = "form-label">Salary</label>
        <input type = "text" class = "formal-control" asp-for="SalaryAmount">
        <span asp-validation-for="SalaryAmount" class="text-danger"></span>
    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>
        <button type = "Submit" class = "btn btn-danger ms-3" asp-action="DeleteSalary", asp-controller="Salary">Delete</button>
    </div>
</form>
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>