                                <label class="form-label">Department Name</label>
                                <input type="text" class="form-control" asp-for="Dept_Name" />
                                <span asp-validation-for="Dept_Name" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <!-- Save Button -->
                                <button type="submit" class="btn btn-outline-primary w-100" name="action" value="Save">Save</button>

