@{}

@model Application.Models.Entities.Department.DepartmentClass

@* @{
    ViewBag.Title = "Edit Employee";
} *@

@if (Model == null)
{
    <p> Department not found </p>
}

@if (Model != null)
{
    <h1> Edit Department </h1>

<form method = "post">
    <div class = "mt-3">
        <label class = "form-label">Department Id</label>
        <input type = "text" class = "formal-control" asp-for="Dept_Id" readonly>
    </div>

    <div class = "mt-3">
        <label class = "form-label">Department Name</label>
        <input type = "text" class = "formal-control" asp-for="Dept_Name">
    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>

        <button type = "Submit" class = "btn btn-danger ms-3" asp-action="DeleteDept", asp-controller="Dept">Delete</button>
    </div>
</form>
}