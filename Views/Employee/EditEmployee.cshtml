@{}

@model Application.Models.Entities.Employee.EmployeeClass

@* @{
    ViewBag.Title = "Edit Employee";
} *@

@if (Model == null)
{
    <p> Employee not found </p>
}

@if (Model != null)
{<h1> Edit Employee </h1>

<form method = "post">
    <div class = "mt-3">
        <label class = "form-label">Employee Id</label>
        <input type = "text" class = "formal-control" asp-for="Emp_Id" readonly>
    </div>

    <div class = "mt-3">
        <label class = "form-label">First Name</label>
        <input type = "text" class = "formal-control" asp-for="First_Name">
    </div>

    <div class = "mt-3">
        <label class = "form-label">Last Name</label>
        <input type = "text" class = "formal-control" asp-for="Last_Name">
    </div>

    <div class = "mt-3">
        <label class = "form-label">Department Id</label>
        <input type = "text" class = "formal-control" asp-for="Dept_Id">
    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>

        <button type = "Submit" class = "btn btn-danger ms-3" asp-action="DeleteEmployee", asp-controller="Employee">Delete</button>
    </div>
</form>
}


