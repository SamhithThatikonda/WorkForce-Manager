@{}

@model Application.Models.Entities.Employee.EditEmployeeViewModel

@if (Model == null)
{
    <p> Employee not found </p>
}

@if (Model != null)
{<h1> Edit Employee </h1>

<form method = "post">
    <div class = "mt-3">
        <label class = "form-label">Employee Id</label>
        <input type = "text" class = "formal-control" asp-for="Employees.Emp_Id" readonly>
    </div>

    <div class = "mt-3">
        <label class = "form-label">First Name</label>
        <input type = "text" class = "formal-control" asp-for="Employees.First_Name">
    </div>

    <div class = "mt-3">
        <label class = "form-label">Last Name</label>
        <input type = "text" class = "formal-control" asp-for="Employees.Last_Name">
    </div>


    <div class = "mt-3">
        <label class = "form-label">Department Name</label>
        <select asp-for="Employees.Dept_Id" onchange="updateDeptId(this) "ge asp-items="@(new SelectList(Model.Departments, "Dept_Id", "Dept_Name"))">@Model.Employees.Dept_Id</select>
    </div>
    
    <script> 
        function updateDeptId(selectElement) {
            var selectedDeptId = selectElement.value;
            document.getElementById("Employees_Dept_Id").value = selectedDeptId;
        }
    </script>
    
    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>
    
        <button type = "Submit" class = "btn btn-danger ms-3" asp-action="DeleteEmployee", asp-controller="Employee">Delete</button>
    </div>
</form>
}




