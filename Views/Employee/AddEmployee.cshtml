@{}

@model Application.Models.Entities.Employee.AddEmployeeViewModel

<h1> Add Employee </h1>

<form asp-action="AddEmployee" method="post">
    <div class = "mt-3">
        <label class = "form-label" >First Name</label>
        <input type = "text" class = "form-label" asp-for="Employee.First_Name" />
    </div>

    <div class = "mt-3">
        <label class = "form-label" > Last Name</label>
        <input type = "text" class = "form-label" asp-for="Employee.Last_Name" />
    </div>

    <div class = "mt-3">
        <label class = "form-label">Department Name</label>
        <select asp-for="Employee.Dept_Id" asp-items="@(new SelectList(Model.Departments, "Dept_Id", "Dept_Name"))"></select>
    </div>

    <div class = "mt-3">
        <label class = "form-label">Salary</label>
        <input type = "text" class = "form-label" asp-for="Employee.SalaryAmount" />
    </div>
    <button type= "Submit" class = "btn btn-primary">Save</button>

</form>
   
