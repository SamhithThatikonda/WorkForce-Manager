@{}

@model Application.Models.Entities.Employee.AddEmployeeModel

@{
    ViewBag.Title = "Add Employee";
}

<form method = "post">
    <div class = "mt-3">
        <label class = "form-label">First Name</label>
        <input type = "text" class = "formal-control" asp-for="First_Name">
    </div>

    <div class = "mt-3">
        <label class = "form-label">Last Name</label>
        <input type = "text" class = "formal-control" asp-for="Last_Name">
    </div>

    <div class = "mt-3">
        <label class = "form-label">Department Id</label>
        <input type = "text" class = "formal-control" asp-for="Dept_Id">
    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>
    </div>
</form>