@{}

@model Application.Models.Entities.Auth.AuthClass;

<h1> Register Application </h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<form method="post">
    <div class = "mt-3">
        <label class = "form-label">Employee Id</label>
        <input type = "text" class = "formal-control" asp-for="Emp_Id" />
        <span asp-validation-for="Emp_Id" class="text-danger"></span>
    </div>
    <div class = "mt-3">
        <label class = "form-label">Password</label>
        <input type = "text" class = "formal-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>
    </div>
</form>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
