        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center mb-4">Register</h3>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info text-center">
                            @ViewBag.Message
