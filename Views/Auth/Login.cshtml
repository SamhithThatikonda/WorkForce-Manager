
@model Application.Models.Entities.Auth.AuthClass
@{
    ViewBag.Title = "Login Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center mb-4">Login Application</h3>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Message
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Employee Id</label>
                            <input type="text" class="form-control" asp-for="Emp_Id">
                            <span asp-validation-for="Emp_Id" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-outline-primary w-100">Login</button>
                        </div>
                    </form>

                    <div class="mt-3 d-flex justify-content-center">
                        <form asp-controller="Auth" asp-action="Register" method="get">
                            <button type="submit" class="btn btn-outline-secondary w-100">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
