@{}

@model Application.Models.Entities.Auth.AuthClass;


<h1> Login Application </h1>
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}


<form method="post">
    <div class = "mt-3">
        <label class = "form-label">Employee Id</label>
        <input type = "text" class = "formal-control" asp-for="Emp_Id">
    </div>
    <div class = "mt-3">
        <label class = "form-label">Password</label>
        <input type = "text" class = "formal-control" asp-for="Password">
    </div>

    <div class = "mt-3">
        <button type = "Submit" class = "btn btn-primary">Save</button>
    </div>
</form>